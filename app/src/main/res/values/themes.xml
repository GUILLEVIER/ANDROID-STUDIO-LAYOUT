<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Theme.PracticeAndroidStudio" parent="android:Theme.Material.Light.NoActionBar" />

  <item name="colorPrimary" type="color">@color/color_primary</item>
  <item name="colorPrimaryDark" type="color">@color/color_primary_dark</item>
  <item name="colorAccent" type="color">@color/color_accent</item>

  <style name="AppTheme.Red" parent="Theme.PracticeAndroidStudio">
    <item name="android:textColor">@color/red</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="AppTheme.Green" parent="Theme.PracticeAndroidStudio">
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:background">#FFFf0000</item>
  </style>

  <style name="AppTheme.EditTextStyle" parent="Theme.PracticeAndroidStudio">
    <item name="android:textSize">16sp</item>
    <item name="android:drawablePadding">12dp</item>
    <item name="android:layout_margin">@dimen/margin_default</item>
  </style>

  <!--- Aplication Theme Festividad -->
  <style name="Theme.PlatziMusicHallowen" parent="">
    <item name="android:background">@color/black</item>
    <item name="android:gravity">center</item>
  </style>

  <!-- Aplication Theme Calculadora -->
  <style name="AppTheme.BotonCalculadora" parent="">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">36dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="AppTheme.BotonCalculadora.Azul" parent="AppTheme.BotonCalculadora">
    <item name="android:background">#00537D</item>
  </style>

  <style name="AppTheme.BotonCalculadora.Rojo" parent="AppTheme.BotonCalculadora">
    <item name="android:background">#EA4D39</item>
  </style>
</resources>